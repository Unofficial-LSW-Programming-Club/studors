<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../components/head'); %>
        <title>Studors - Tutor</title>
</head>

<body>
    <%- include('../../components/header'); %>
    <label>Availability:</label>
    <form action="" method="post">
        <table id="availabilityTable">
            <thead>
                <tr class="header">
                    <th style="width:16%">Time</th>
                    <th style="width:16%">Mon</th>
                    <th style="width:16%">Tue</th>
                    <th style="width:16%">Wed</th>
                    <th style="width:16%">Thu</th>
                    <th style="width:16%">Fri</th>
                </tr>
            </thead>
            <tbody>
                <% for(const obj of times){ %>
                    <tr>
                        <% for(const key in obj) { %>
                            <% if (key == 0) { %>
                                <td><%= functions.formatTime(obj[key]) %></td>
                            <% } else { %>
                                <td><input type="checkbox" name="<%= (obj[key]) %>" <% if(checked.includes(obj[key])) { %>
                                checked <%}%>/></td>
                            <% }
                            } %>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <button type="submit">Save</button>
    </form>

    <%- include('../../components/footer'); %>
</body>

</html>