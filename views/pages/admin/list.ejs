<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../components/head'); %>
  <title>Studors - Admin</title>
</head>

<style>
  #user-list {
    white-space: pre-line;
  }
</style>

<body>
  <div id="flex-box">
    <%- include('../../components/header'); %>
    <div id="user-list">
      <h2> Students: </h2>
      <%= students %>
      <h2> Tutors: </h2>
      <%= tutors %>
      <h2> Admins: </h2>
      <%= admins %>
      <h2> Allowed Student domains: </h2>
      <%= studentAllowed %>
      <h2> Allowed Tutors: </h2>
      <%= tutorAllowed %>
      <h2> Allowed Admins: </h2>
      <%= adminAllowed %>
      <h2> Upcoming Sessions: </h2>
      <table>
        <tr>
          <th>Time</th>
          <th>Tutor name</th>
          <th>Tutor surname</th>
          <th>Student name</th>
          <th>Student surname</th>
          <th>Subject</th>
          <th>Hours</th>
        </tr>
        <% for(const obj of upcomingSessions){ %>
        <tr>
          <% for(const key in obj) { %>
          <td><%= obj[key] %></td>
          <% } %>
        </tr>
        <% } %>
      </table>
      <h2> Past Sessions: </h2>
      <table>
        <tr>
          <th>Time</th>
          <th>Tutor name</th>
          <th>Tutor surname</th>
          <th>Student name</th>
          <th>Student surname</th>
          <th>Subject</th>
          <th>Hours</th>
        </tr>
        <% for(const obj of pastSessions){ %>
        <tr>
          <% for(const key in obj) { %>
          <td><%= obj[key] %></td>
          <% } %>
        </tr>
        <% } %>
      </table>
    </div>
    <%- include('../../components/footer'); %>
  </div>
</body>

</html>