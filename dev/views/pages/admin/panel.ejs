<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../../components/head'); %>
  <title>Studors - Admin</title>

  <style>
    /* Current page bold */
    .home-footer {
      font-weight: 900;
    }

    .nav-home {
      font-weight: 900;
    }
  </style>
</head>

<body>
  <%- include('../../components/header'); %>
  <div class="flex-box">
    <div id="home-center-box">
      <div class="profile">
        <div class="profileimg">
          <img src="<%= user.picture %>" referrerpolicy="no-referrer" />
        </div>
        <div>
          <p class="name">
            <%= user.first_name %>
            <%= user.last_name %>
          </p>
        </div>
      </div>
      <form class="home-buttons" action='/auth/logout' method='post'>
        <button class="mainbutton" onclick="location.href='manage'" type="button">
          Manage
        </button>
        <button class="mainbutton" onclick="location.href='list'" type="button">
          List Data
        </button>
        <button class="mainbutton" onclick="location.href='settings'" type="button">
          Account Settings
        </button>
        <button class="mainbutton" type="submit">
          Logout
        </button>
      </form>
    </div>
  </div>
  <%- include('../../components/footer'); %>
</body>

</html>