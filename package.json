{
  "name": "studors",
  "version": "0.0.1",
  "description": "A web service that allows for students to get in contact with volunteer student tutors",
  "main": "src/index.js",
  "repository": "https://github.com/Unofficial-LSW-Programming-Club/studors.git",
  "author": "blaine-t <github@bathost.net>",
  "license": "GPL-3.0",
  "scripts": {
    "clean": "npx rimraf dist/*",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prebuild": "npm-run-all clean lint-and-fix prettier-format",
    "build": "npx tsc",
    "postbuild": "npx ts-node build",
    "build-image": "docker build --tag studors-node:latest -f Node-Dockerfile .",
    "docker-build": "npm-run-all build build-image",
    "build-database": "docker build --tag studors-postgres:latest -f PG-Dockerfile .",
    "lint": "eslint . --ext .ts",
    "prod": "node .",
    "dev": "npx nodemon",
    "test": "npx jest --findRelatedTests"
  },
  "dependencies": {
    "body-parser": "^1.20.0",
    "dotenv": "^16.0.2",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "memorystore": "^1.6.7",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/node": "^18.7.15",
    "@types/passport": "^1.0.10",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/pg": "^8.6.5",
    "@types/shelljs": "^0.8.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  }
}
