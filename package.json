{
  "name": "studors",
  "version": "0.2.0",
  "description": "A web service that allows for students to get in contact with volunteer student tutors",
  "main": "src/index.js",
  "repository": "https://github.com/Unofficial-LSW-Programming-Club/studors.git",
  "author": "blaine-t <github@bathost.net>",
  "license": "GPL-3.0",
  "scripts": {
    "clean": "npx rimraf dist/*",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "minify": "npx ts-node ./dev/scripts/minify",
    "prebuild": "npm-run-all clean lint-and-fix minify",
    "build": "npx tsc",
    "postbuild": "npx ts-node ./dev/scripts/build",
    "build-image": "docker build --tag studors-node:latest -f Node-Dockerfile .",
    "docker-build": "npm-run-all build build-image",
    "docker-build-all": "npm-run-all build build-image build-database",
    "build-database": "docker build --tag studors-postgres:latest -f PG-Dockerfile .",
    "lint": "eslint . --ext .ts",
    "prod": "node .",
    "dev": "npx nodemon"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.0",
    "memorystore": "^1.6.7",
    "node-schedule": "^2.1.0",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/node": "^18.11.9",
    "@types/node-schedule": "^2.1.0",
    "@types/passport": "^1.0.11",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/pg": "^8.6.5",
    "@types/shelljs": "^0.8.11",
    "@types/uglifycss": "^0.0.7",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "ejs-lint": "^2.0.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "uglify-js": "^3.17.4",
    "uglifycss": "^0.0.29"
  }
}
