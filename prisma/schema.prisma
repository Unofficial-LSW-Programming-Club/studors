// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator class_validator {
  provider = "prisma-class-validator-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id          String        @id @unique
  apiKey      String        @default(cuid())
  firstName   String
  lastName    String
  pic         String
  phone       String?
  email       String
  darkMode    Boolean       @default(false)
  authSession AuthSession[]

  @@index([id, email])
}

model Student {
  id          String        @id @unique
  firstName   String
  lastName    String
  pic         String
  phone       String?
  email       String
  grade       Int           @default(-1)
  darkMode    Boolean       @default(false)
  sessions    Session[]
  AuthSession AuthSession[]

  @@index([id, email])
}

model Tutor {
  id           String        @id @unique
  firstName    String
  lastName     String
  pic          String
  phone        String?
  email        String
  grade        Int           @default(-1)
  subjects     String[]
  availability DateTime[]
  darkMode     Boolean       @default(false)
  hoursTerm    Float         @default(0)
  hoursTotal   Float         @default(0)
  sessions     Session[]
  AuthSession  AuthSession[]

  @@index([id, email])
}

model Session {
  id        String   @id @default(cuid())
  time      DateTime
  tutor     Tutor    @relation(fields: [tutorId], references: [id])
  tutorId   String
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String

  @@index([time, tutorId, studentId])
}

model AuthSession {
  id        String   @id @default(cuid())
  sid       String   @unique
  expires   DateTime
  admin     Admin    @relation(fields: [adminId], references: [id])
  adminId   String
  student   Student  @relation(fields: [studentId], references: [id])
  studentId String
  tutor     Tutor    @relation(fields: [tutorId], references: [id])
  tutorId   String
}
